# Application Settings
FLASK_ENV=production
FLASK_APP=app.py
SECRET_KEY=your-secret-key-here-change-this
DEBUG=False

# Database Configuration
# Local SQLite (for development)
DATABASE_URL=sqlite:///marine.db
# Production PostgreSQL (uncomment and use instead)
# DATABASE_URL=postgresql://user:password@host:5432/marine_db

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Optional: Cloud Storage (AWS S3)
# AWS_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Optional: Email Notifications
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Optional: Monitoring
# SENTRY_DSN=your-sentry-url
# DATADOG_API_KEY=your-datadog-key

# Feature Flags
ENABLE_MESSAGING=True
ENABLE_THEME_SYSTEM=True
ENABLE_ADVANCED_REPORTS=True
MAX_UPLOAD_SIZE=104857600
